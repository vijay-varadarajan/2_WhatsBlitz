{
  "manifest_version": 3,
  "name": "WhatsBlitz",
  "version": "1.0.0",
  "description": "Automate personalized WhatsApp messages from Excel/CSV.",
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://web.whatsapp.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://web.whatsapp.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ]
}